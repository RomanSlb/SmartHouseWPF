<Window x:Class="WpfApp3.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Login" Height="372" Width="300" FontSize="14" Background="red">
    <Border Background="black" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="white" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="white"/>
            <TextBox Name="txtUsername" Background="#2F2936" Foreground="White" FontSize="18" TextChanged="txtUsername_TextChanged"/>
            <Label Content="Password" Foreground="white"/>
            <PasswordBox Name="txtPassword" Background="#2F2936" Foreground="White" FontSize="18"/>
            <Button Name="btnSubmit" Click="btnSubmit_Click" Content="Submit" Margin="55 10" Background="#2F2936" Foreground="White" FontSize="18"/>
            <Button Name="btnRegistration" Click="btnRegistration_Click" Content="Registration" Margin="55 10" Background="#2F2936" Foreground="White" FontSize="18"/>
        </StackPanel>
    </Border>

</Window>
