<Window x:Class="WpfApp3.MyDevices"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MyDevices" Height="350" Width="525" Background="black">
    <Border Background="red" CornerRadius="20" Margin="20">
        <StackPanel>
            <Label Content="My devices" Foreground="White" FontSize="15"/>
            <TextBlock Text=" Start equip your smart house" Foreground="White"/>
            <Separator></Separator>
            <Button Name="btnClimat" Click="btnClimat_Click" Content="Climat controll" Margin="10" Background="#2F2936" Foreground="White" FontSize="18" Height="42"/>
            <Button Name="btnAnother" Click="btnAnother_Click" Content="Another devices" Margin="10" Background="#2F2936" Foreground="White" FontSize="18" Height="42"/>
            <Button Name="btnBack" Click="btnBack_Click" Content="Back" Margin="120,50" Background="#2F2936" Foreground="White" FontSize="18" Height="42"/>
        </StackPanel>
    </Border>
</Window>
